@page "{ID}:int"
@model Test_ShoppingCart.Pages.OnDeleteCartItemModel
@{
    Layout = "Consumer_Layout";
    ViewData["Title"] = "OnDeleteCartItem";
}

<div style="color: transparent; font-family: Arial, sans-serif; text-align: center;">
    <h1 style="font-size: 24px; font-weight: bold;">Delete CartItem</h1>
    <h1 style="font-size: 20px;">@ViewData["Message"]</h1>
    <h4 style="background-color: forestgreen; color: white; padding: 10px; border-radius: 5px; margin-top: 20px;">
        Are you sure you want to delete this CartItem with the specified ID!!
        <b style="color: white;">@Html.DisplayFor(model => model.GetCart.CartId)</b>
    </h4>
</div>

<div class="signin2" style="text-align: center; margin-top: 20px;">
    <form method="post">
        <button class="button" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; margin-top: 20px;">Delete</button><br />
        <a asp-page="CartItem" style="text-decoration: none; color: #4CAF50; display: block; margin-top: 10px;">BACK To List</a>
    </form>
</div>
